<% unless @publication.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<p>
  <%= link_to 'Destroy Comment', [comment.publication, comment],
              method: :delete,
              data: { confirm: "Are you sure?" } %>
</p>